      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "target_amount": {
            "type": "number"
          },
          "current_amount": {
            "type": "number"
          },
          "deadline": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "description": "Status: not_started, in_progress, completed"
          },
          "monthly_contribution": {
            "type": "number"
          }
        },
        "required": ["id", "name", "target_amount", "current_amount", "status"]
      }
    }
