    "recurring_transactions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "category": {
            "type": "string"
          },
          "account": {
            "type": "string"
          },
          "frequency": {
            "type": "string",
            "description": "Frequency: daily, weekly, monthly, yearly"
          },
          "next_date": {
            "type": "string"
